background yes

alignment top_left

gap_x 60
gap_y 40

use_xft yes

double_buffer yes

update_interval 0.1

xftfont DejaVuSerif:size=16

TEXT
${font DejaVuSerif:size=60}${time %H:%M:%S}
${time %e %b %Y}${font DejaVuSerif:size=25}
$alignr${time %A}
${voffset 10}${font DejaVuSerif:size=20}Active desktop: $desktop$font

IP: ${execi 36000 wget -O - http://ip.tupeux.com | tail}${alignr}Volume:  ${exec amixer get Master 0 | grep -oE [[:digit:]]*% -m 1}

Battery$alignr${font DejaVuSerif:italic}${battery_percent BAT1}%$font
${battery_bar BAT1}

RAM$alignc${font DejaVuSerif:size=11}$mem / $memmax$alignr${font DejaVuSerif:italic}$memperc%$font
$membar

/home$alignc${font DejaVuSerif:size=11}${fs_used /home} / ${fs_size /home} $alignr${font DejaVuSerif:italic}${fs_used_perc /home}%$font
${fs_bar /home}

/$alignc${font DejaVuSerif:size=11}${fs_used /} / ${fs_size /} $alignr${font DejaVuSerif:italic}${fs_used_perc /}%$font
${fs_bar /}

Top Processes

    ${top_mem name 1} $alignr${top mem 1}%
    ${top_mem name 2} $alignr${top mem 2}%
    ${top_mem name 3} $alignr${top mem 3}%
    ${top_mem name 4} $alignr${top mem 4}%
    ${top_mem name 5} $alignr${top mem 5}%
    ${top_mem name 6} $alignr${top mem 6}%
    ${top_mem name 7} $alignr${top mem 7}%
    ${top_mem name 8} $alignr${top mem 8}%
    ${top_mem name 9} $alignr${top mem 9}%
    ${top_mem name 10} $alignr${top mem 10}%
